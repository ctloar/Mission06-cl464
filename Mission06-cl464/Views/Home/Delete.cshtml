@{
    ViewData["Title"] = "Delete Movie";
}

@model MovieForm

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete @Model.Title?</h3>

<form asp-action="Delete" asp-controller="Home" method="post">
    <button type="submit">Delete</button>
    <a asp-action="MovieList" asp-controller="Home" class="btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieId" />
</form>